services:
  qbittorrent:
    image: linuxserver/qbittorrent:latest
    container_name: qbittorrent
    restart: always
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Etc/UTC
      - WEBUI_PORT=8080
    volumes:
      - {{ docker_storage_mount_point }}/qbittorrent/qbittorrent-config:/config
      - {{ docker_storage_mount_point }}/qbittorrent/qbittorrent-downloads:/downloads
    ports:
      - 5050:8080
      - 6881:6881
      - 6881:6881/udp